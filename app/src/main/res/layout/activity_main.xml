<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txvExpressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textDirection="firstStrongLtr"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/txvResultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:textSize="30sp"
        android:maxLines="1"
        android:ellipsize="end"
     />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/limpar"
            style="@style/Operators_Button"
            android:text="C"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/divisao"
            style="@style/Operators_Button"
            android:text="/"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_sete"
            style="@style/Numbers_Buttons"
            android:text="7"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_oito"
            style="@style/Numbers_Buttons"
            android:text="8"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_nove"
            style="@style/Numbers_Buttons"
            android:text="9"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/multplicacao"
            style="@style/Operators_Button"
            android:text="x"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_quatro"
            style="@style/Numbers_Buttons"
            android:text="4"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_cinco"
            style="@style/Numbers_Buttons"
            android:text="5"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_seis"
            style="@style/Numbers_Buttons"
            android:text="6"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/subtracao"
            style="@style/Operators_Button"
            android:text="-"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_um"
            style="@style/Numbers_Buttons"
            android:text="1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_dois"
            style="@style/Numbers_Buttons"
            android:text="2"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_tres"
            style="@style/Numbers_Buttons"
            android:text="3"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/soma"
            style="@style/Operators_Button"
            android:text="+"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ponto"
            style="@style/Numbers_Buttons"
            android:text="."/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_zero"
            style="@style/Numbers_Buttons"
            android:text="0"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backspace"
            style="@style/Numbers_Buttons"
            android:src="@drawable/backspace"
            android:scaleType="center"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/igual"
            style="@style/Operators_Button"
            android:text="="/>
    </LinearLayout>



</LinearLayout>